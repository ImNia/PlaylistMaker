<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Toolbar.SubPage" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorSwitchThumbNormal">@color/setting_icon_color</item>
        <item name="android:colorForeground">@color/setting_icon_color</item>
    </style>

    <style name="button_main_screen" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/text_color</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="item_setting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_item_setting_size</item>
        <item name="drawableTint">@color/setting_icon_color</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="main_screen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/background_blue</item>
    </style>
    <style name="additional_screen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="toolbar">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>