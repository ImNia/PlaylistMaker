<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.ui.fragment.MediaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarSetting"
        style="@style/Theme.PlaylistMaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:text="@string/media"
        app:navigationIcon="@drawable/arrow_back"
        app:titleTextAppearance="@style/Toolbar.SubPage">

        <TextView
            style="@style/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/media" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/tabs_layout"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/fragment_background"
        />

</LinearLayout>