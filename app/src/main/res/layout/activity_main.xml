<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_blue"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="top"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="28dp"
        >
        <Button
            android:id="@+id/findButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/find_button"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_button_size"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/text_color"
            app:cornerRadius="@dimen/corner_radius_button"
            />

        <Button
            android:id="@+id/mediaButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media_button"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_button_size"
            android:textStyle="normal"
            app:cornerRadius="@dimen/corner_radius_button"
            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/text_color" />
        <Button
            android:id="@+id/settingButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/setting"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_button_size"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            app:icon="@drawable/setting"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/text_color"
            app:cornerRadius="@dimen/corner_radius_button"
            />
    </LinearLayout>

</LinearLayout>