<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Toolbar.SubPage" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorSwitchThumbNormal">@color/setting_icon_color</item>
        <item name="android:colorForeground">@color/setting_icon_color</item>
    </style>

    <style name="button_main_screen" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_button_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/text_color</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="item_setting" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_item_setting_size</item>
        <item name="android:paddingStart">@dimen/padding_setting_start_end</item>
        <item name="android:paddingEnd">@dimen/padding_setting_start_end</item>
        <item name="android:paddingTop">@dimen/padding_setting_top_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_setting_top_bottom</item>
        <item name="drawableTint">@color/setting_icon_color</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="item_recycler" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_item_setting_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="item_sub_data" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_item_sub_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="text_error_search">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="button_item_update" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/background_night</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/text_color</item>
        <item name="cornerRadius">@dimen/item_corner_radius_button</item>
    </style>

    <style name="main_screen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/background_night</item>
    </style>
    <style name="additional_screen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="toolbar">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/background_night</item>
    </style>

    <style name="description_song_main">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="background">@color/background_night</item>
    </style>

    <style name="sub_description_song_input" parent="sub_description_song">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/background_night</item>
    </style>

    <style name="tabs_layout" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_tabs_layout_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/background_night</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabTextAppearance">@style/custom_text_appearance</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="fragment_background" parent="sub_description_song">
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="custom_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bottom_navigation" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
        <item name="android:background">@drawable/background_bottom_drawer</item>
    </style>

    <style name="editText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:drawableTint">@color/text_color</item>
        <item name="android:tint">@color/text_color</item>
    </style>
    <style name="bottom_sheet" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/background_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>